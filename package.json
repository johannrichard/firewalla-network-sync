{
  "name": "firewalla-network-sync",
  "version": "1.0.0",
  "description": "Synchronize client names between Firewalla (master) and UniFi Network",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "bundle": "npm run build && esbuild dist/index.js --bundle --platform=node --target=node18 --outfile=dist/firewalla-sync.js && esbuild dist/index.js --bundle --platform=node --target=node18 --minify --outfile=dist/firewalla-sync.min.js",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "check": "biome check .",
    "lint": "biome lint .",
    "format": "biome format --write ."
  },
  "keywords": [
    "firewalla",
    "unifi",
    "network",
    "sync",
    "client-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "esbuild": "^0.24.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
